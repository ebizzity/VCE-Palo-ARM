{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {},
    "resources": [
         {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-09-01",
            "name": "[variables('global_NIC_VCE_LAN_name')]",
            "location": "[parameters('resource_location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_LAN_Name'))]"

            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "[parameters('VCE_LAN_Static_IP')]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_LAN_Name'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true
            }
        },

        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-09-01",
            "name": "[variables('global_NIC_VCE_MGMT_name')]",
            "location": "[parameters('resource_location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_MGMT_Name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('global_networkSecurityGroups_NSG_HUB_MGMT_name'))]"
            ],
            "tags": {

            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "[parameters('VCE_MGMT_Static_IP')]",
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_MGMT_Name'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('global_networkSecurityGroups_NSG_HUB_MGMT_name'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-09-01",
            "name": "[variables('global_NIC_VCE_WAN_name')]",
            "location": "[parameters('resource_location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('global_publicIPAddresses_VCE01_ip_name'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_WAN_Name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "[parameters('VCE_WAN_Static_IP')]",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('global_publicIPAddresses_VCE01_ip_name'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('global_vnet_name'), variables('global_SN_HUB_WAN_Name'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true
            }
        },

        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[variables('global_virtualMachines_VCE01_name')]",
            "location": "[parameters('resource_location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_MGMT_name'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_WAN_name'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_LAN_name'))]",
                "[resourceId('Microsoft.Storage/StorageAccounts', variables('global_storageAccounts_diagnostics_name'))]"
            ],
            "tags": {

            },
            "plan": {
                "name": "velocloud-virtual-edge-3x",
                "product": "velocloud-virtual-edge-3x",
                "publisher": "velocloud"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS3_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "velocloud",
                        "offer": "velocloud-virtual-edge-3x",
                        "sku": "velocloud-virtual-edge-3x",
                        "version": "3.0.0"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(variables('global_virtualMachines_VCE01_name'), '_OsDisk_1')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 32
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[variables('global_virtualMachines_VCE01_name')]",
                    "adminUsername": "appadmin",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/appadmin/.ssh/authorized_keys",
                                    "keyData": "[parameters('SSH_Key')]"
                                }
                            ]
                        },
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_MGMT_name'))]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_WAN_name'))]",
                            "properties": {
                                "primary": false
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('global_NIC_VCE_LAN_name'))]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('global_storageAccounts_diagnostics_name'), '.blob.core.windows.net/')]"
                    }
                }
            }
        } 
    ],
    "outputs": {}
}