{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "VCE_LAN_Static_IP": {
            "defaultValue": "10.132.232.68",
            "type": "String"
        },
        "VCE_MGMT_Static_IP": {
            "defaultValue": "10.132.232.5",
            "type": "String"
        },
        "VCE_WAN_Static_IP": {
            "defaultValue": "10.132.232.20",
            "type": "String"
        },
        "SN_HUB_TRANS1_Address_Space": {
            "defaultValue": "<TRANS1_Address Space>",
            "type": "string"
        },
        "SN_HUB_TRANS2_Address_Space": {
            "defaultValue": "<TRANS2_Address Space>",
            "type": "string"
        },
        "username": {
            "defaultValue": "azureadmin",
            "type": "string"
        },
        "SSH_Key": {
            "type": "SecureString"
        },
       
        "VCE-Vnet-RG": {
            "defaultValue": "<VNETRG>",
            "type": "String"
        },
        "VNETOption": {
            "type": "string",
            "defaultValue": "Create new VNET",
            "allowedValues": [
                "Create new VNET",
                "Use existing VNET"
            ],
            "metadata": {
                "description": "If creating a new VNET, anything not specified in the template will be deleted."
            }
        },
        "VNETName": {
            "type": "string", 
            "defaultValue": "<VCE-HUB-VNET>",
            "metadata": {
                "description": "Hub VNET name"
            }
        },
        "VN_HUB_Address_Space": {
            "defaultValue": "10.132.232.0/24",
            "type": "String"
        },
        "SN_HUB_LAN_Address_Space": {
            "defaultValue": "10.132.232.64/28",
            "type": "String"
        },
        "SN_HUB_WAN_Address_Space": {
            "defaultValue": "10.132.232.16/28",
            "type": "String"
        },
        "SN_HUB_MGMT_Address_Space": {
            "defaultValue": "10.132.232.0/28",
            "type": "String"
        },
        "SiteCode": {
            "type": "string",
            "defaultValue": "<SITE_CODE>",
            "metadata": {
                "description": "Site Code for naming"
            }
        },
        "storageAccounts_diagnostics_name": {
            "type": "string",
            "defaultValue": "<DiagStorageacctName>",
            "metadata": {
                "description": "Storage account used for VM Diagnostics"
            }
        },
        "(opt.) AppendStringToResources": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "If the NAME and CONFIGURATION of the created LBs/NSGs/VMs/AVSET/VNET match an existing LBs/NSGs/VMs/AVSET/VNET in the SAME resource group, the template will its skip creation.  If the new resource NAME matches, but the resource CONFIGURATION does not, the template will fail or will overwrite the existing resource."
            }
        }

    },
    "functions": [],
    "variables": {
        "global_var_resource_group": "[resourceGroup().name]",
        "globalTemplateUriBase": "https://raw.githubusercontent.com/ebizzity/VCE-Palo-ARM/master/",
        "global_var_appendedString": "[if(equals(parameters('(opt.) AppendStringToResources'), ''), '', parameters('(opt.) AppendStringToResources'))]",
        "global_vnet_name": "[if(equals(parameters('VNETOption'), 'Use existing VNET'), parameters('VNETName'), take(replace(concat('VN-',parameters('SiteCode'),'-HUB', variables('global_var_appendedString')), ' ', ''), 64))]",
        "global_vnet_resource_group": "[if(equals(parameters('VCE-Vnet-RG'), ''), variables('global_var_resource_group'), parameters('VCE-Vnet-RG'))]",
        "global_vnet_option": "[parameters('VNETOption')]",
        "global_SN_HUB_LAN_Name": "[take(replace(concat(parameters('SiteCode'),'-HUB-LAN'), ' ', ''), 80)]",
        "global_SN_HUB_WAN_Name": "[take(replace(concat(parameters('SiteCode'),'-HUB-WAN'), ' ', ''), 80)]",
        "global_SN_HUB_MGMT_Name": "[take(replace(concat(parameters('SiteCode'),'-HUB-MGMT'), ' ', ''), 80)]",
        "global_SN_HUB_TRANS1_Name": "[take(replace(concat(parameters('SiteCode'),'-HUB-TRANS1'), ' ', ''), 80)]",
        "global_SN_HUB_TRANS2_Name": "[take(replace(concat(parameters('SiteCode'),'-HUB-TRANS2'), ' ', ''), 80)]",
        "global_NIC_VCE_LAN_name": "[take(replace(concat('NIC-',parameters('SiteCode'),'-SV-VCE-LAN'), ' ', ''), 80)]",
        "global_NIC_VCE_WAN_name": "[take(replace(concat('NIC-',parameters('SiteCode'),'-SV-VCE-WAN'), ' ', ''), 80)]",
        "global_NIC_VCE_MGMT_name": "[take(replace(concat('NIC-',parameters('SiteCode'),'-SV-VCE-MGMT'), ' ', ''), 80)]",
        "global_networkSecurityGroups_NSG_HUB_WAN_name": "[take(replace(concat('NSG-',parameters('SiteCode'),'-HUB-WAN'), ' ', ''), 80)]",
        "global_networkSecurityGroups_NSG_HUB_MGMT_name": "[take(replace(concat('NSG-',parameters('SiteCode'),'-HUB-MGMT'), ' ', ''), 80)]",
        "global_publicIPAddresses_VCE01_ip_name": "[take(replace(concat(parameters('SiteCode'),'-SV-VCE-ip'), ' ', ''), 80)]",
        "global_virtualMachines_VCE01_name": "[take(replace(concat(parameters('SiteCode'),'-SV-VCE'), ' ', ''), 80)]",
        //"global_storageAccounts_diagnostics_name": "[take(replace(parameters('storageAccounts_diagnostics_name'), ' ', ''), 80)]",
        "global_vm_adminUsername": "[parameters('username')]",
        "global_vm_SSHKey": "[parameters('SSH_Key')]",
        "HubVNETTemplateUri": "[concat(variables('globalTemplateUriBase'),'hubvnet-deploy.json')]"

    },
    "resources": [
        
        {
            "comments": "Create Hub Virtual Network",
            "type": "Microsoft.Resources/deployments",
            "name": "CREATE_HUB_VNET",
            "apiVersion": "2019-07-01",
            "resourceGroup": "[variables('global_vnet_resource_group')]",
            "condition": "[equals(variables('global_vnet_option'), 'Create new VNET')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('HubVNETTemplateUri')]",
                    "contentVersion": "1.0.0.0"

                },
                "parameters": {
                    "VNET_NAME": {
                        "value": "[variables('global_vnet_name')]"
                    },
                    "address-space": {
                        
                        "value": "[parameters('VN_HUB_Address_Space')]"
                    },
                    "LAN-subnet-name": {
                        
                        "value": "[variables('global_SN_HUB_LAN_Name')]"
                    },
                    "LAN-subnet-address-space": {
                        
                        "value": "[parameters('SN_HUB_LAN_Address_Space')]"
                    },
                    "WAN-subnet-name": {
                        
                        "value": "[variables('global_SN_HUB_WAN_Name')]"
                    },
                    "WAN-subnet-address-space": {
                        
                        "value": "[parameters('SN_HUB_WAN_Address_Space')]"
                    },
                    "MGMT-subnet-name": {
                        
                        "value": "[variables('global_SN_HUB_MGMT_Name')]"
                    },
                    "MGMT-subnet-address-space": {
                        
                        "value": "[parameters('SN_HUB_MGMT_Address_Space')]"
                    },
                    "TRANS1-subnet-name":{
                        
                        "value": "[variables('global_SN_HUB_TRANS1_Name')]"
                    },
                    "TRANS1-address-space":{
                        
                        "value": "[parameters('SN_HUB_TRANS1_Address_Space')]"
                    },
                    "TRANS2-subnet-name":{
                        
                        "value": "[variables('global_SN_HUB_TRANS2_Name')]"
                    },
                    "TRANS2-address-space":{
                        
                        "value": "[parameters('SN_HUB_TRANS2_Address_Space')]"
                    },
                    "networkSecurityGroups_NSG_HUB_MGMT_name":{
                        
                        "value": "[variables('global_networkSecurityGroups_NSG_HUB_MGMT_name')]"
                    },
                    "networkSecurityGroups_NSG_HUB_WAN_name":{
                        
                        "value": "[variables('global_networkSecurityGroups_NSG_HUB_WAN_name')]"
                    }


                }
            }
        }//,
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
